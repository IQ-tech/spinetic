{
  "author": "lxavier",
  "name": "react-spinetic",
  "version": "0.0.9",
  "description": "A lightweight React carousel library for creating interactive carousels in your web applications.",
  "private": false,
  "keywords": [
    "carousel",
    "slider",
    "web",
    "library",
    "react-spinetic"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "./src/spinetic-types.d.ts",
  "files": [
    "dist",
    "src/spinetic-types.d.ts",
    "LICENSE",
    "README.md"
  ],
  "homepage": "https://github.com/IQ-tech/spinetic#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/IQ-tech/spinetic.git"
  },
  "bugs": {
    "url": "https://github.com/IQ-tech/spinetic/issues"
  },
  "scripts": {
    "build:sass": "node-sass src/styles.scss dist/styles.css",
    "clean:publish": "rm -rf dist",
    "build:publish": "npm run build:sass && npx rollup -c",
    "deploy:publish": "npm run clean && npm run build && npm publish"
  },
  "peerDependencies": {
    "react": ">=17.0.0 <19.0.0",
    "react-dom": ">=17.0.0 <19.0.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "node-sass": "^7.0.3",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": ">=4.1.6 <6.0.0",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@types/node": "^16.18.48",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7"
  },
  "eslintConfig": {
    "rules": {
      "react-hooks/exhaustive-deps": "off",
      "import/no-anonymous-default-export": "off",
      "array-callback-return": "off"
    },

    "extends": [
      "react-app"
    ]
  },
  "engines": {
    "node": ">=10"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
